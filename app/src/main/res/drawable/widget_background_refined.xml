<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_shadow"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Main background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/widget_accent"
                android:centerColor="#FFFFFFFF"
                android:endColor="@color/widget_overlay"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="18dp" />
            <stroke 
                android:width="1dp"
                android:color="@color/widget_secondary" />
        </shape>
    </item>
</layer-list> 
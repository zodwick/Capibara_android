<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_accent"
    android:padding="8dp">

    <TextView
        android:id="@+id/widget_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/widget_overlay"
        android:padding="4dp"
        android:text="Time's up!"
        android:textColor="@color/widget_text_primary"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center" />

    <ImageView
        android:id="@+id/widget_capybara_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget_time_text"
        android:layout_above="@id/widget_status_container"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:contentDescription="Capybara status" />

    <LinearLayout
        android:id="@+id/widget_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/widget_overlay"
        android:padding="2dp">

        <TextView
            android:id="@+id/widget_status_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜´"
            android:textSize="12sp"
            android:layout_marginEnd="2dp" />

        <TextView
            android:id="@+id/widget_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleepy"
            android:textColor="@color/widget_text_secondary"
            android:textSize="10sp"
            android:textStyle="italic" />

    </LinearLayout>

</RelativeLayout> 